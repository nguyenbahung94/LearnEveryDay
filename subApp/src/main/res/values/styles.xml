<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="CustomEdtTheme">
        <item name="colorControlNormal">@color/white</item>
        <item name="colorControlActivated">@color/white</item>
        <item name="colorControlHighlight">@color/white</item>
    </style>

    <style name="RedSeparateLineStyle">
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:layout_height">@dimen/line_height</item>
        <item name="android:layout_marginLeft">@dimen/margin_small</item>
        <item name="android:layout_marginRight">@dimen/margin_small</item>
    </style>

    <style name="BrownSeparateLine">
        <item name="android:background">@color/light_gray_opa_40</item>
        <item name="android:layout_height">@dimen/line_height</item>
        <item name="android:layout_marginLeft">@dimen/margin_small</item>
        <item name="android:layout_marginRight">@dimen/margin_small</item>
    </style>

    <style name="LoginSpinnerStyle">
        <item name="android:layout_width">@dimen/login_screen_edittext_width</item>
        <item name="android:layout_height">@dimen/standard_button_size</item>
        <item name="android:background">@drawable/white_gradient_spinner</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingRight">20dp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:popupBackground">#DFFFFFFF</item>
    </style>

    <style name="OutletSpinnerStyle">
        <item name="android:textColor">@color/black</item>
        <item name="android:background">@drawable/light_gray_gradient_spinner</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingRight">20dp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:popupBackground">#DFFFFFFF</item>
    </style>

    <style name="OutletLargeSpinnerStyle" parent="OutletSpinnerStyle">
        <item name="android:layout_width">@dimen/outlet_large_width</item>
        <item name="android:layout_height">@dimen/standard_button_size</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_marginLeft">@dimen/margin_small</item>
        <item name="android:layout_marginRight">@dimen/margin_small</item>
        <item name="android:layout_marginTop">@dimen/margin_small</item>
    </style>

    <style name="OutletNormalSpinnerStyle" parent="OutletSpinnerStyle">
        <item name="android:layout_width">@dimen/outlet_normal_width</item>
        <item name="android:layout_marginLeft">@dimen/margin_small</item>
        <item name="android:layout_marginTop">@dimen/margin_small</item>
        <item name="android:layout_height">@dimen/standard_button_size</item>
    </style>

    <style name="OutletSmallSpinnerStyle" parent="OutletSpinnerStyle">
        <item name="android:layout_width">@dimen/outlet_xxsmall_width</item>
        <item name="android:layout_height">@dimen/standard_button_size</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_marginLeft">@dimen/margin_small</item>
        <item name="android:layout_marginTop">@dimen/margin_small</item>
    </style>

    <style name="ColumeTitleTViewStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">@dimen/small_button_size</item>
        <item name="android:layout_weight">0.5</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textSize">@dimen/title_text_size</item>
    </style>

    <style name="PrimaryDartButtonStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">0.5</item>
        <item name="android:background">@color/colorPrimaryDark</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="BottomButtonStyle" parent="PrimaryDartButtonStyle">
        <item name="android:layout_height">@dimen/normal_button_size</item>
        <item name="android:textSize">@dimen/bottom_button_text_size</item>
    </style>

    <style name="AlertDialogButtonStyle" parent="PrimaryDartButtonStyle">
        <item name="android:layout_height">@dimen/small_button_size</item>
        <item name="android:textSize">@dimen/xlarge_text_size</item>
    </style>

    <style name="OutletTextViewStyle">
        <item name="android:layout_width">@dimen/outlet_xsmall_width</item>
        <item name="android:layout_height">@dimen/standard_button_size</item>
        <item name="android:layout_marginLeft">@dimen/margin_small</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="LargeOutletTextViewStyle">
        <item name="android:layout_width">@dimen/outlet_small_width</item>
        <item name="android:layout_height">@dimen/standard_button_size</item>
        <item name="android:layout_marginLeft">@dimen/margin_small</item>
        <item name="android:layout_marginTop">@dimen/margin_small</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="SmallOutletTextViewStyle">
        <item name="android:layout_width">@dimen/outlet_xxxsmall_width</item>
        <item name="android:layout_height">@dimen/standard_button_size</item>
        <item name="android:layout_marginLeft">@dimen/margin_xlarge</item>
        <item name="android:layout_marginBottom">@dimen/margin_small</item>
        <item name="android:layout_marginTop">@dimen/margin_small</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="OutletRedTextViewStyle">
        <item name="android:layout_width">@dimen/outlet_normal_width</item>
        <item name="android:layout_height">@dimen/standard_button_size</item>
        <item name="android:layout_marginLeft">@dimen/margin_small</item>
        <item name="android:layout_marginRight">@dimen/margin_small</item>
        <item name="android:layout_marginTop">@dimen/margin_small</item>
        <item name="android:background">@drawable/red_button_shape</item>
        <item name="android:padding">@dimen/padding_small</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="OutletSectionHeaderTViewStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/margin_small</item>
        <item name="android:layout_marginTop">@dimen/margin_small</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="OutletCheckboxStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/margin_small</item>
        <item name="android:layout_marginTop">@dimen/margin_small</item>
    </style>

    <style name="FeatureButtonStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">@dimen/large_button_size</item>
        <item name="android:layout_marginLeft">@dimen/margin_normal</item>
        <item name="android:layout_marginRight">@dimen/margin_normal</item>
        <item name="android:textColor">@color/semi_red</item>
        <item name="android:textStyle">bold</item>
    </style>

</resources>
