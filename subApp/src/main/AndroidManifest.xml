<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.bat.firstcom.supervisorapp">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <uses-feature
        android:name="android.hardware.camera"
        android:required="true" />
    <!-- Needed only if your app targets Android 5.0 (API level 21) or higher. -->
    <uses-feature
        android:name="android.hardware.location.gps"
        android:required="true" />

    <application
        android:name="com.bat.firstcom.supervisorapp.App"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="com.bat.firstcom.supervisorapp.presentation.login.LoginActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.bat.firstcom.supervisorapp.presentation.changepassword.ChangePasswordActivity"
            android:screenOrientation="portrait">

        </activity>
        <activity
            android:name="com.bat.firstcom.supervisorapp.presentation.features.FeaturesActivity"
            android:screenOrientation="portrait">

        </activity>
        <activity
            android:name="com.bat.firstcom.supervisorapp.presentation.pstlist.PSTListActitivy"
            android:screenOrientation="portrait">

        </activity>
        <activity
            android:name="com.bat.firstcom.supervisorapp.presentation.outletlist.OutletListActitivy"
            android:screenOrientation="portrait">

        </activity>
        <activity
            android:name="com.bat.firstcom.supervisorapp.presentation.marking.MarkingActivity"
            android:screenOrientation="portrait">

        </activity>
        <activity
            android:name="com.bat.firstcom.supervisorapp.presentation.editoutlet.EditOutletActivity"
            android:screenOrientation="portrait">

        </activity>
    </application>

</manifest>