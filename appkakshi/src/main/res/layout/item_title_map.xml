<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/height_60dp"
    android:layout_marginLeft="@dimen/margin_10dp"
    android:layout_marginRight="@dimen/margin_10dp"
    android:layout_marginTop="@dimen/margin_10dp"
    android:background="@color/white">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_30dp"
        android:layout_marginStart="@dimen/margin_30dp"
        android:layout_marginTop="@dimen/margin_10dp"
        tools:ignore="UselessParent">

        <TextView
            android:id="@+id/txt_title_map"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:singleLine="true"
            android:text="Kenjomae Oya"
            android:textColor="@color/tvColor44"
            android:textSize="@dimen/tv_size_16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txt_sub_title_map"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/txt_title_map"
            android:ellipsize="end"
            android:maxLines="1"
            android:singleLine="true"
            android:text="Ogawara, Miyagi Prefecture"
            android:textColor="@color/tvColor44"
            android:textSize="@dimen/tv_size_14sp" />
    </RelativeLayout>

</RelativeLayout>