<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="@dimen/height_30dp"
    android:background="@drawable/layout_filter_round_corner"
    android:paddingBottom="@dimen/padding_5dp"
    android:paddingEnd="@dimen/padding_10dp"
    android:paddingLeft="@dimen/padding_10dp"
    android:paddingRight="@dimen/padding_10dp"
    android:paddingStart="@dimen/padding_10dp"
    android:paddingTop="@dimen/padding_5dp">

    <TextView
        android:textColor="@color/tv_graph_title"
        android:id="@+id/tvFilterApply"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:textSize="@dimen/tv_size_14sp" />

    <TextView
        android:id="@+id/type"
        android:layout_width="0dp"
        android:layout_height="0dp" />

    <ImageView
        android:contentDescription="@string/description"
        android:id="@+id/imgFilterItemClear"
        android:layout_width="@dimen/width_15dp"
        android:layout_height="@dimen/height_15dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/margin_10dp"
        android:layout_marginStart="@dimen/margin_10dp"
        android:layout_toEndOf="@id/tvFilterApply"
        android:layout_toRightOf="@id/tvFilterApply"
        android:src="@drawable/ic_filter_delete" />
</RelativeLayout>