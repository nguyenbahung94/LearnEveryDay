<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/tvMeasurementDevice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/padding_8dp"
        android:text="@string/measurement_device"
        android:textColor="@android:color/black"
        android:textSize="@dimen/text_size_larger"
        android:textStyle="bold" />
    <TextView
        android:id="@+id/tvBasicInfo"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_48dp"
        android:gravity="center"
        android:layout_below="@+id/tvMeasurementDevice"
        android:text="@string/edit_basic_information"
        android:textColor="@color/bg_green_btn"
        android:textSize="@dimen/text_size_large" />

</RelativeLayout>