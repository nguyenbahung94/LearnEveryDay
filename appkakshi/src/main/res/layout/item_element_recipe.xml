<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="45dp"
    android:layout_marginBottom="10dp"
    android:layout_marginTop="15dp"
    android:gravity="center_vertical">

    <ImageView
        android:id="@+id/imvRecipe"
        android:layout_width="40dp"
        android:layout_height="@dimen/height_40dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/margin_10dp"
        android:layout_marginStart="@dimen/margin_10dp"
        android:contentDescription="@string/description" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@id/imvRecipe"
        android:layout_toRightOf="@id/imvRecipe"
        android:orientation="vertical"
        android:paddingLeft="20dp"
        android:paddingStart="20dp"
        tools:ignore="RtlSymmetry">

        <TextView
            android:id="@+id/tvNameRecipe"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/tvColor44"
            android:textSize="12sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvStateOfRecipes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="Stage: Growth Promotiong Peri"
            android:textColor="#757575"
            android:textSize="12.5sp" />
    </LinearLayout>
</RelativeLayout>