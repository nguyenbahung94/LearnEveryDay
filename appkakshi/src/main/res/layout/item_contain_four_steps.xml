<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/height_65dp"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true"
    android:layout_below="@+id/toolbar"
    android:layout_marginTop="@dimen/margin_6dp"
    android:orientation="horizontal">

    <ProgressBar
        android:id="@+id/progressBar1"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_6px"
        android:layout_marginTop="@dimen/margin_20dp"
        android:max="100"
        android:progress="20"
        android:progressDrawable="@drawable/my_progress" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/margin_30dp"
        android:layout_marginRight="@dimen/margin_30dp"
        android:baselineAligned="false"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">
            <!-- <ImageView
                 android:id="@+id/imvStep1"
                 android:layout_width="35dp"
                 android:layout_height="35dp"
                 android:src="@drawable/checked" />-->

            <RelativeLayout
                android:layout_width="@dimen/height_35dp"
                android:layout_height="@dimen/height_35dp"
                android:background="@drawable/circle_bg_blue">

                <android.support.v7.widget.AppCompatImageView
                    android:layout_width="@dimen/icon_small_13dp"
                    android:layout_height="@dimen/icon_small_13dp"
                    android:layout_centerInParent="true"
                    android:contentDescription="@string/txt_content_description"
                    android:gravity="center"
                    app:srcCompat="@drawable/ic_svg_check_35_white" />
            </RelativeLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_3dp"
                android:text="@string/txt_info"
                android:textColor="@color/tvColor44"
                android:textSize="@dimen/tv_size_14sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="@dimen/height_35dp"
                android:layout_height="@dimen/height_35dp"
                android:background="@drawable/circle_bg_blue">

                <TextView
                    android:id="@+id/tvrStep2"
                    android:layout_width="@dimen/height_35dp"
                    android:layout_height="@dimen/height_35dp"
                    android:background="@drawable/circle_bg_disable"
                    android:gravity="center"
                    android:text="@string/txt_number_2"
                    android:textColor="@color/tv_white"
                    android:textSize="@dimen/tv_size_13sp" />

                <android.support.v7.widget.AppCompatImageView
                    android:id="@+id/imvStep2"
                    android:layout_width="@dimen/icon_small_13dp"
                    android:layout_height="@dimen/icon_small_13dp"
                    android:layout_centerInParent="true"
                    android:contentDescription="@string/txt_content_description"
                    android:gravity="center"
                    app:srcCompat="@drawable/ic_svg_check_35_white"
                    android:visibility="gone" />
            </RelativeLayout>


            <TextView
                android:id="@+id/tvRecipeStep2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_3dp"
                android:enabled="false"
                android:text="@string/txt_recipe"
                android:textColor="@color/tv_color_d2"
                android:textSize="@dimen/tv_size_14sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="@dimen/height_35dp"
                android:layout_height="@dimen/height_35dp"
                android:background="@drawable/circle_bg_blue">

                <TextView
                    android:id="@+id/tvStep3"
                    android:layout_width="@dimen/height_35dp"
                    android:layout_height="@dimen/height_35dp"
                    android:background="@drawable/circle_bg_disable"
                    android:gravity="center"
                    android:text="@string/txt_number_3"
                    android:textColor="@color/tv_white"
                    android:textSize="@dimen/tv_size_13sp" />

                <android.support.v7.widget.AppCompatImageView
                    android:id="@+id/imvStep3"
                    android:layout_width="@dimen/icon_small_13dp"
                    android:layout_height="@dimen/icon_small_13dp"
                    android:layout_centerInParent="true"
                    android:contentDescription="@string/txt_content_description"
                    android:gravity="center"
                    app:srcCompat="@drawable/ic_svg_check_35_white"
                    android:visibility="gone" />
            </RelativeLayout>


            <TextView
                android:id="@+id/tvPlaceStep3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_3dp"
                android:enabled="false"
                android:text="@string/txt_place"
                android:textColor="@color/tv_color_d2"
                android:textSize="@dimen/tv_size_14sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="@dimen/height_35dp"
                android:layout_height="@dimen/height_35dp"
                android:background="@drawable/circle_bg_blue">

                <TextView
                    android:id="@+id/tvStep4"
                    android:layout_width="@dimen/height_35dp"
                    android:layout_height="@dimen/height_35dp"
                    android:background="@drawable/circle_bg_disable"
                    android:gravity="center"
                    android:text="@string/txt_number_4"
                    android:textColor="@color/tv_white"
                    android:textSize="@dimen/tv_size_13sp" />

                <android.support.v7.widget.AppCompatImageView
                    android:id="@+id/imvStep4"
                    android:layout_width="@dimen/icon_small_13dp"
                    android:layout_height="@dimen/icon_small_13dp"
                    android:layout_centerInParent="true"
                    android:contentDescription="@string/txt_content_description"
                    android:gravity="center"
                    app:srcCompat="@drawable/ic_svg_check_35_white"
                    android:visibility="gone" />
            </RelativeLayout>


            <TextView
                android:id="@+id/tvConfirmStep4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_3dp"
                android:enabled="false"
                android:text="@string/txt_confirm"
                android:textColor="@color/tv_color_d2"
                android:textSize="@dimen/tv_size_14sp" />
        </LinearLayout>

    </LinearLayout>
</RelativeLayout>