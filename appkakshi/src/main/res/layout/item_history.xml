<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/width_60dp"
    android:layout_marginBottom="@dimen/margin_2dp"
    android:background="@android:color/white"
    android:orientation="horizontal"
    android:paddingLeft="@dimen/padding_15dp"
    android:paddingRight="@dimen/padding_15dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvAuthorRecipe"
            android:layout_width="wrap_content"
            android:maxWidth="@dimen/width_200dp"
            android:layout_height="wrap_content"
            android:textColor="@color/tv_color_0000"
            android:textSize="@dimen/tv_size_15sp"
            android:singleLine="true"
            tools:text="PS Solution" />

        <TextView
            android:id="@+id/tvSubtitleAuthor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/padding_5dp"
            android:textColor="@color/tvColor_d7"
            android:textSize="@dimen/tv_size_15sp"
            android:singleLine="true"
            android:maxWidth="@dimen/width_350dp"
            tools:text="Created by Tazo Suzuki" />
    </LinearLayout>

    <TextView
        android:id="@+id/tvHistoryRecipe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/margin_16dp"
        android:layout_marginStart="@dimen/margin_16dp"
        android:textColor="@color/tv_black"
        android:textSize="@dimen/tv_size_15sp"
        tools:text="Created 2017.10.03" />
</RelativeLayout>