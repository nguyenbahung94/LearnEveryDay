<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layoutMember"
    android:layout_width="match_parent"
    android:layout_height="@dimen/height_80dp"
    android:background="@color/white">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imgDelete"
                android:layout_width="@dimen/dp20"
                android:layout_height="@dimen/dp20"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/margin_15dp"
                android:layout_marginStart="@dimen/margin_15dp"
                android:contentDescription="@string/txt_content_description"
                android:visibility="gone"
                app:srcCompat="@drawable/ic_svg_ban" />


            <!--android:src="@drawable/user_avatar"-->
            <ImageView
                android:id="@+id/imgAvatar"
                android:layout_width="@dimen/height_40dp"
                android:layout_height="@dimen/height_40dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/margin_20dp"
                android:layout_marginStart="@dimen/margin_20dp"
                android:adjustViewBounds="true"
                android:contentDescription="@string/txt_content_description" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/margin_10dp"
                android:layout_marginStart="@dimen/margin_10dp"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/tvUsername"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/tvColor44"
                    android:textSize="@dimen/tv_size_14sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvApproval"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tvUsername"
                    android:layout_marginTop="@dimen/margin_10dp"
                    android:textColor="@color/pending_approval"
                    android:textSize="@dimen/tv_size_13sp" />
            </RelativeLayout>

        </LinearLayout>

        <ImageView
            android:id="@+id/imgChevron"
            android:layout_width="@dimen/height_15dp"
            android:layout_height="@dimen/height_15dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/margin_15dp"
            android:layout_marginRight="@dimen/margin_15dp"
            android:contentDescription="@string/txt_content_description"
            app:srcCompat="@drawable/ic_svg_next" />
    </RelativeLayout>
</android.support.v7.widget.CardView>