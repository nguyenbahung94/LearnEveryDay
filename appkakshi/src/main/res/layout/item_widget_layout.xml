<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="130dp"
    android:layout_height="150dp"
    android:layout_gravity="center_horizontal"
    android:layout_marginTop="@dimen/margin_10dp">


    <ImageView
        android:id="@+id/imv"
        android:layout_width="match_parent"
        android:layout_height="125dp"
        android:scaleType="fitXY"
        android:contentDescription="@string/description" />

    <TextView
        android:id="@+id/tvNameOfItem"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_40dp"
        android:layout_below="@id/imv"
        android:background="@color/bg_green_btn"
        android:gravity="center"
        android:text="Weather Forecast(7 days)"
        android:textColor="@color/white"
        android:textSize="@dimen/tv_size_11sp" />

    <ImageView
        android:id="@+id/imvRemove"
        android:layout_width="@dimen/width_25dp"
        android:layout_height="@dimen/height_25dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="9dp"
        android:contentDescription="@string/description"
        android:visibility="gone"
        app:srcCompat="@drawable/ic_remove_circle_red_24dp" />

    <ImageView
        android:background="@color/background_layout"
        android:id="@+id/imvShow"
        android:layout_width="@dimen/width_25dp"
        android:layout_height="@dimen/height_25dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_margin="@dimen/margin_5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="9dp"
        android:contentDescription="@string/description"
        android:visibility="visible"
        app:srcCompat="@drawable/ic_move_icon" />

</RelativeLayout>