<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color"
    android:orientation="vertical">

    <include
        android:id="@+id/toolbar_main"
        layout="@layout/toolbar_main" />

    <RelativeLayout
        android:id="@+id/layoutJapan"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_45dp"
        android:layout_marginTop="@dimen/margin_35dp"
        android:background="@color/white">

        <TextView
            android:id="@+id/tvLanguageJa"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/margin_15dp"
            android:layout_marginStart="@dimen/margin_15dp"
            android:text="@string/locale_ja"
            android:textSize="@dimen/tv_size_14sp" />

        <ImageView
            android:id="@+id/imgJapanSelect"
            android:layout_width="@dimen/width_24dp"
            android:layout_height="@dimen/width_24dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/margin_10dp"
            android:layout_marginRight="@dimen/margin_10dp"
            android:contentDescription="@string/txt_content_description"
            android:visibility="invisible"
            app:srcCompat="@drawable/ic_svg_check_35" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_1dp"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="@dimen/margin_15dp"
            android:layout_marginStart="@dimen/margin_15dp"
            android:background="@color/background_divider" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/layoutEnglish"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_45dp"
        android:background="@color/white">

        <TextView
            android:id="@+id/tvLanguageEn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/margin_15dp"
            android:layout_marginStart="@dimen/margin_15dp"
            android:text="@string/locale_en"
            android:textSize="@dimen/tv_size_14sp" />

        <ImageView
            android:id="@+id/imgEnglishSelect"
            android:layout_width="@dimen/width_24dp"
            android:layout_height="@dimen/width_24dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/margin_10dp"
            android:layout_marginRight="@dimen/margin_10dp"
            android:contentDescription="@string/txt_content_description"
            android:visibility="invisible"
            app:srcCompat="@drawable/ic_svg_check_35" />

    </RelativeLayout>

</LinearLayout>
