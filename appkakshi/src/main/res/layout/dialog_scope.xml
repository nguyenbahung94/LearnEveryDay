<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/padding_8dp"
        android:text="@string/scope_of_disclosure"
        android:textColor="@android:color/black"
        android:textSize="@dimen/text_size_larger"
        android:textStyle="bold" />

    <RelativeLayout
        android:id="@+id/layoutDisclosure"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_8dp"
        android:clickable="true"
        android:focusable="true"
        android:paddingBottom="@dimen/padding_4dp"
        android:paddingTop="@dimen/padding_4dp">

        <ImageView
            android:contentDescription="@string/description"
            android:id="@+id/imgDisclosure"
            android:layout_width="@dimen/width_24dp"
            android:layout_height="@dimen/width_24dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/margin_8dp"
            android:layout_marginStart="@dimen/margin_8dp"
            android:scaleType="centerCrop"
            android:visibility="invisible"
            app:srcCompat="@drawable/ic_check_green_24dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/margin_15dp"
            android:layout_marginLeft="@dimen/margin_15dp"
            android:layout_marginRight="@dimen/margin_15dp"
            android:layout_marginStart="@dimen/margin_15dp"
            android:layout_toEndOf="@+id/imgDisclosure"
            android:layout_toRightOf="@+id/imgDisclosure"
            android:gravity="center_vertical"
            android:text="@string/disclosure"
            android:textColor="@android:color/black"
            android:textSize="@dimen/text_size_normal" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/layoutUnDisclosure"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_8dp"
        android:clickable="true"
        android:focusable="true"
        android:paddingBottom="@dimen/padding_4dp"
        android:paddingTop="@dimen/padding_4dp">

        <ImageView
            android:contentDescription="@string/description"
            android:id="@+id/imgUnDisclosure"
            android:layout_width="@dimen/width_24dp"
            android:layout_height="@dimen/width_24dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/margin_8dp"
            android:layout_marginStart="@dimen/margin_8dp"
            android:scaleType="centerCrop"
            android:visibility="invisible"
            app:srcCompat="@drawable/ic_check_green_24dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/margin_15dp"
            android:layout_marginLeft="@dimen/margin_15dp"
            android:layout_marginRight="@dimen/margin_15dp"
            android:layout_marginStart="@dimen/margin_15dp"
            android:layout_toEndOf="@+id/imgUnDisclosure"
            android:layout_toRightOf="@+id/imgUnDisclosure"
            android:gravity="center_vertical"
            android:text="@string/undisclosure"
            android:textColor="@android:color/black"
            android:textSize="@dimen/text_size_normal" />
    </RelativeLayout>


</LinearLayout>